<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHome"
    android:background="#8ACD3B">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màn hình chính"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChaomung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2">
    </TextView>
    <TextView
        android:id="@+id/tvTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintLeft_toRightOf="@+id/tvChaomung">
    </TextView>
    <ImageView
        android:id="@+id/imgntu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTen"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="100dp"
        android:src="@drawable/a"
        ></ImageView>
    <Button
        android:id="@+id/btn1"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:text="QUIZ 1"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imgntu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        >
    </Button>

    <Button
        android:id="@+id/bt2"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:text="QUIZ 2"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imgntu"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        >
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>